<!doctype html>
<html>
<head><meta charset="utf-8"><title>Admin</title></head>
<body>
  <h1>Admin</h1>
  <h2>Create Timeslot</h2>
  <form method="post" action="/admin/timeslot">
    <label>Date <input name="date" type="date" required></label>
    <label>Start <input name="start" type="time" required></label>
    <label>End <input name="end" type="time"></label>
    <label>Capacity <input name="capacity" type="number" value="10"></label>
    <label>Publish <input name="publish" type="checkbox"></label>
    <button>Create</button>
  </form>

  <h2>Timeslots</h2>
  <ul>
  <% slots.forEach(function(s){ %>
    <li><%= s.date %> <%= s.start %> cap <%= s.capacity %> published: <%= s.published%>
      <form method="post" action="/admin/publish/<%= s.id %>" style="display:inline">
        <input type="hidden" name="publish" value="<%= s.published ? 0 : 1 %>">
        <button><%= s.published ? 'Unpublish' : 'Publish' %></button>
      </form>
    </li>
  <% }) %>
  </ul>

  <h2>Whitelist</h2>
  <p><%= whitelist.join(', ') %></p>

  <p><a href="/">Home</a></p>
</body>
</html>
